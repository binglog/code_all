page{
    background-color: #000;
}
.search-box {
    background-color: rgb(0, 0, 0);
    padding: 20rpx;
}

.search-box .search-inp {
    line-height: 60rpx;
    background-color: #fff;
    border-radius: 50rpx;
    text-align: center;
}

.search-box .search-text {
    font-size: 32rpx;
    color: #999 !important;
}

.search-box .search-icon {
    height: 20rpx;
    vertical-align: -9rpx;
}

.swiper-box {
    margin: 20rpx 0;
    height: 300rpx;
    /* border: 1px solid red; */
}

.swiper-box .swiper-img {
    margin: 0 6rpx;
    height: 100%;
    width: 100%;
}

.movie-box {
    height: 350rpx;
    /* border: 1px solid red; */
    background-color: rgb(0, 0, 0);
    margin-bottom: 20rpx;
    color: #fff;
}

.movie-title {
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    color: #fff;
    /* background-color: #ccc; */
}
text{
    color: #fff;
}

.movie-title .movie-title-left {
    color: rgb(255, 255, 255);
    font-size: 35rpx;
    line-height: 80rpx;
}

.movie-title .movie-title-right {
    color: rgb(160, 160, 160);
    line-height: 80rpx;
    font-size: 28rpx;
}

.movie-title .movie-title-right .teshu {
    color: rgb(124, 124, 124);
}

.movie-scroll {
    width: 100%;
    display: flex;
    padding:15rpx 15rpx 15rpx;
}
/* .movie-box:nth-of-type(1) scroll-view .movie-scroll .movie-item {
    box-shadow: 0px 0px 9px 1px rgb(76 227 247);
} */
view:nth-of-type(2) scroll-view view{
    box-shadow: 0px 0px 9px 1px rgb(76 227 247);
}


.movie-item {
    width: 160rpx;
    display: flex;
    flex-direction: column;
    margin: 0 15rpx;

}

.movie-item .movie-item-img {
    width: 160rpx;
    height: 200rpx;
    border-radius: 10rpx;
}


.movie-item .movie-item-text {
    font-size: 28rpx;
    margin: 15rpx 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #fff !important;
}